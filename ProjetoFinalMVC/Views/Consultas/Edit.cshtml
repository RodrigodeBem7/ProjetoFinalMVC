@model ProjetoFinalMVC.Models.ViewModels.ConsultFormViewModel

@{
    ViewData["Title"] = "Editar";
}

<h2>@ViewData["Title"]</h2>

<h4>Consulta</h4>
<hr />
<div class="row">
    <div class=" col-md-4">
        <form asp-action="Edit">
            <input type="hidden" asp-for="consulta.Id" />
            <div class="form-group">
                <label asp-for="consulta.Data" class="control-label"></label>
                <input asp-for="consulta.Data" class="form-control" />
                <span asp-validation-for="consulta.Data" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="consulta.Valor" class="control-label"></label>
                <input asp-for="consulta.Valor" class="form-control" />
                <span asp-validation-for="consulta.Valor" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="consulta.DoutorId" class="control-label"></label>
                <select asp-for="consulta.DoutorId" asp-items="@(new SelectList(Model.Doutores,"Id","Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Alterar" class="btn btn-default" />
            </div>
        </form>
    </div>
</div>

@section Scripts{
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}