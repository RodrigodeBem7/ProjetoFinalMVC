@model ProjetoFinalMVC.Models.ViewModels.ConsultFormViewModel

@{
    ViewData["Title"] = "Registro de Consultas";

    <h2>@ViewData["Title"]</h2>

    <p>
        <a asp-action="Create" class="btn btn-default">Registrar consulta</a>
    </p>

    <div class="row">
        <div class="col-md-6">
            <form class="form-horizontal" asp-action="BuscaSimples">
                <fieldset>
                    <legend>Busca Genérica</legend>
                    <div class="form-group">
                        <label for="minDate" class="col-lg-2 control-label">Data Inicial</label>
                        <div class="col-lg-10">
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="maxDate" class="col-lg-2 control-label">Data Final</label>
                        <div class="col-lg-10">
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-primary">Pesquisar</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>

    <div class="row">
        <div class="col-md-6">
            <form class="form-horizontal" asp-action="BuscaGrupo">
                <fieldset>
                    <legend>Busca por Especializações</legend>
                    <div class="form-group">
                        <label for="minDate" class="col-lg-2 control-label">Data Inicial</label>
                        <div class="col-lg-10">
                            <input type="date" name="minDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <label for="maxDate" class="col-lg-2 control-label">Data Final</label>
                        <div class="col-lg-10">
                            <input type="date" name="maxDate" class="form-control" />
                        </div>
                    </div>
                    <div class="form-group">
                        <div class="col-lg-10 col-lg-offset-2">
                            <button type="submit" class="btn btn-primary">Pesquisar</button>
                        </div>
                    </div>
                </fieldset>
            </form>
        </div>
    </div>
}